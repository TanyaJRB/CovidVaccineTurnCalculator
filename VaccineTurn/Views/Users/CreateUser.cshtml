
@model VaccineTurn.Models.Users

@{
    ViewData["Title"] = "CreateUser";
}


<h1>Step 1 - Please Enter Your Details</h1>

<form method="post" asp-action="Create">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" placeholder="Please enter your full name" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Age"></label>
        <input asp-for="Age" placeholder="Please enter your age as of 1 July" class="form-control"/>
        <small id="ageHelp" class="form-text text-muted">Enter your age on or after 1 July 2021. Note: You must be 18+ to use this service.</small>
    </div>
    <div class="form-group">
        <label asp-for="Location"></label>
        <input asp-for="Location" placeholder="Please enter your city" class="form-control" />
        <small id="ageHelp" class="form-text text-muted">This service is for residents of the United Kingdom only.</small>
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-info w-25" value="Submit"/>
        <a asp-controller="Home" asp-action="Index" class="btn btn-danger w-25">Back</a>
    </div>
</form>

